<div class="container">
  <h1>Quotes</h1>

  <h2>
    <%= link_to new_quote_path, id: "new-quote-link" do %>
      <span>Add new quote</span>
    <% end %>
  </h2>

  <div class="row">
    <div class="container">
      <% @quotes.each do |quote| %>
        <%= render 'quote_row', quote: quote %>
      <% end %>
    </div>
  </div>

  <%= will_paginate %>
</div>